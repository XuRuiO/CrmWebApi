<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="c:\logs\crm\temp\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- 本地文件日志target -->
  <targets async="true">
    <!--nlog-all 记录了所有日志-->
    <target xsi:type="File" name="allfile" fileName="c:\logs\crm\nlogAll\${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!--nlog-own 记录了我们自定义的日志-->
    <target xsi:type="File" name="ownFile-web" fileName="c:\logs\crm\nlogOwn\${shortdate}.json" keepFileOpen="false" encoding="utf-8" />
    <layout xsi:type="JsonLayout">
      <attribute name="date" layout="${longdate}" />
      <attribute name="node_name" layout="${nodeName}" />
      <attribute name="level" layout="${level:upperCase=true}"/>
      <attribute name="message" layout="${message:format=message}" encode="true" escapeUnicode="false" />
      <attribute name="counter" layout="${counter}" />
      <attribute name="callsite" layout="${callsite}" />
      <attribute name="callsite_linenumber" layout="${callsite-linenumber}" />
      <attribute name="request_url" layout="${aspnet-request-url}" />
      <attribute name="request_method" layout="${aspnet-request-method}" />
      <attribute name="mvc_controller" layout="${aspnet-mvc-controller}" />
      <attribute name="mvc_action" layout="${aspnet-mvc-action}" />
      <attribute name="exception" layout="${exception:format=ToString}" />
    </layout>

  </targets>

  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!--自定义日志，排除Microsoft日志-->
    <logger name="Microsoft.*" maxLevel="Info" final="true" />

    <!-- BlackHole without writeTo -->
    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />
  </rules>
</nlog>